@model List<GreatLand.Models.RouteReport>
@using GridMvc.Html
@{
    ViewBag.Title = "Route 12 Report";
}

<h2>Lauberge/Golden Nugget</h2>


<html>
<head>
    <title>Office</title>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/themes/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />


    <script src="@Url.Content("~/Scripts/jquery-2.1.4.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.11.4.min.js")"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>




</head>
<body>

    <div id="bakHolidays" style="width:100%">
        @Html.Grid(Model).Columns(columns =>
   {
       columns.Add(c => c.Reservation_Confirmation).Titled("Confirmation");
       columns.Add(c => c.Reservation_Route).Titled("Route").Filterable(false);
       columns.Add(c => c.Reservation_LastName).Titled("Last Name").Filterable(true);
       columns.Add(c => c.Reservation_FirstName).Titled("First Name").Filterable(true);
       columns.Add(c => c.Reservation_NumberofSeats).Titled("# of Seats");
       columns.Add(c => c.Reservation_Traveler1Name).Titled("Traveler 1");
       columns.Add(c => c.Reservation_Traveler2Name).Titled("Traveler 2");
       columns.Add(c => c.Reservation_Traveler3Name).Titled("Traveler 3");
       columns.Add(c => c.Reservation_Traveler4Name).Titled("Traveler 4");
       columns.Add(c => c.Reservation_Traveler5Name).Titled("Traveler 5");
   }).WithPaging(15).Sortable(true)
    </div>
    
</body>
</html>
