@model GreatLand.Models.CustTaskModelBson


@using GridMvc.Html

@{
    ViewBag.Title = "GreatLand - Reservation";
}

<h2>L'Auberge Casino Resort</h2>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Office</title>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


</head>
<body>


    <table>
        <tr><td> <div style="font-family:Verdana; font-size:small; font-weight:bold; text-align:left">LOCATION DETAILS </div> </td></tr>
        <tr><td><div style="font-family:Verdana; font-size:medium; text-align:left">@TempData["Courses"]</div></td></tr>
    </table>

    <center>
        <div>
            <table cellpadding="15" height="0">
                @foreach (var item in ViewData["route"] as List<GreatLand.Models.Routes>)
            {
                    <tr>
                        <th style="background-color:darkcyan; font-family:Verdana; font-size:small">
                            Route
                        </th>
                        <th style="background-color:darkcyan; font-family:Verdana; font-size:small">
                            Day
                        </th>
                        <th style="background-color:darkcyan; font-family:Verdana; font-size:small">
                            Depart
                        </th>
                        <th style="background-color:darkcyan; font-family:Verdana; font-size:small">
                            Arrive Casino
                        </th>
                        <th style="background-color:darkcyan; font-family:Verdana;font-size:small">
                            Depart Casino
                        </th>
                        <th style="background-color:darkcyan; font-family:Verdana;font-size:small">
                            Return Time
                        </th>
                    </tr>
                    <tr>
                        <td style="font-family:Verdana;font-size:small">
                            @item.Route
                        </td>
                        <td style="font-family:Verdana;font-size:small">
                            @item.Day
                        </td>
                        <td style="font-family:Verdana;font-size:small">
                            @item.Depart
                        </td>
                        <td style="font-family:Verdana;font-size:small">
                            @item.ArriveCasino
                        </td>
                        <td style="font-family:Verdana;font-size:small">
                            @item.DepartCasino
                        </td>
                        <td style="font-family:Verdana;font-size:small">
                            @item.ReturnTime
                        </td>
                    </tr>
                }
            </table>
        </div>
    </center>
    <br />
    <br />
    <br />
    @using (Html.BeginForm("Add", "Lauberge"))
    {
        @Html.ValidationSummary(true)

        <center>
            <fieldset>
                <legend>New Reservation</legend>
                <div>
                    Reservations may only be made 1-10 days in advance due to possible schedule changes.
                    <br />
                    <br />
                    <br />
                </div>
                <div>
                    <table border="0">
                        <tr>
                            <th>

                                <div class="editor-label" style="text-align:right">
                                    Number of Seats
                                </div>
                            </th>
                            <td>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.SeatsNumber)
                                    @Html.ValidationMessageFor(model => model.SeatsNumber)
                                </div>
                                <div>Price: $10 per seat</div>
                            </td>
                        
                        </tr>

                        <tr>
                            <td style="visibility:hidden">
                                <div class="editor-label" style="text-align:right">
                                    Route
                                </div>
                            </td>
                            <td style="visibility:hidden">
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Route)
                                    @Html.ValidationMessageFor(model => model.Route)
                                </div>
                            </td>
                        </tr>


                        <tr>
                            <td>

                                <div class="editor-label" style="text-align:right">
                                    Date
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @*Html.EditorFor(model => model.Date)*@

                                    @Html.EditorFor(model => model.Date, new { @class = "datefield", type = "date"  })
                                    @Html.ValidationMessageFor(model => model.Date)
                                </div>

                        </tr>

                        <tr>
                            <td>
                                <div class="editor-label" style="text-align:right">
                                    First Name
                                </div>
                            </td>
                            <td style="width:400px">
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.FirstName)
                                    @Html.ValidationMessageFor(model => model.FirstName)
                                </div>
                            </td>
                        </tr>


                        <tr>
                            <td>
                                <div class="editor-label" style="text-align:right">
                                    Last Name
                                </div>
                            </td>
                            <td style="width:400px">
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.LastName)
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div class="editor-label" style="text-align:right">
                                    Email
                                </div>
                            </td>
                            <td style="width:400px">
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Email)
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                        </tr>

                        <tr>
                            <td>
                                <div class="editor-label" style="text-align:right">
                                    Phone
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Phone)
                                    @Html.ValidationMessageFor(model => model.Phone)
                                </div>
                        </tr>




                    </table>
                </div>
                <div style="align-items:center">
                    <!--<input type="submit" value="Create" />-->

                    <input type="submit" value="Save" name="action" />
                </div>

            </fieldset>
        </center>

        @*
            <div class="editor-field">
                @Html.EditorFor(model => model.UpDate)
                @Html.ValidationMessageFor(model => model.UpDate)
            </div>

            <div class="editor-field">
                @Html.EditorFor(model => model.CreatedDate)
                @Html.ValidationMessageFor(model => model.CreatedDate)
            </div>
        *@



    }


</body>
</html>

